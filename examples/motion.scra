(declare
	(name "Motion Example")
)
(when flag
	(goto_xy 0 0)
	(wait 1)
	(change_x 10)
	(change_y 10)
	(wait 1)
	(goto _random_)
	(wait 1)
	(set_x 0)
	(set_rotation_style "left-right")
	(turn_right 45)
	(wait 1)
	(glide 5 _random_)
	(wait 1)
	(set_y 0)
	(set_rotation_style "all around")
	(point_towards _mouse_)
	(wait 1)
	(point_direction 145)
	(glide_xy 1 50 50)
)
